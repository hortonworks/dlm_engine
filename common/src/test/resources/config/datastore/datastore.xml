<Datastore name="" type="CLUSTER" description="" colo="">
    <Comments></Comments> 
    <Source>
        <Configuration/>
        <Interfaces>
        <Interface name="HDFS" type="HDFS" version="23">
            <Command name="read" url="webhdfs://host:port">
            <Arguments>
                <Argument>${arg1}</Argument>
                <Argument>${arg2}</Argument>
            </Arguments>
            <Options>  <!-- Map of options -->
                <Option name="cmd" value="get"/>
                <Option name="feed" value="${feed}"/>
                <Option name="frequency" value="${frequency}"/>
                <Option name="date" value="%{date}"/>
                <Option name="bucket" value="${bucket}"/>
                <Option name="skipstats" value="1"/>
                <Option name="version" value="1"/>
            </Options>
        </Command>
        </Interface>
        <Interface name="HCat" type="HCat" version="2">
            <!-- hive query language. TODO HQL for discovery -->
            <Command name="discovery" url="host:port" command="select * from $hcat_tablename where $x = $y"/>
        </Interface>
        </Interfaces>
    </Source>
    <Sink>
        <Configuration>
            <property name="workingdir" value="/tmp/gdmtest"/>
            <property name="trashdir" value="/tmp/gdmtest/trash"/>`
        </Configuration>
        <Interfaces>
        <Interface name="HDFS" type="HDFS" version="23">
            <Proxy type="http" host="http-proxy-host" port="4080"/>
            <Command name="write" url="webhdfs://host:port"/>
        </Interface>
        <Interface name="MR" type="MR" version="23">
            <Command name="execute" url="resource manager url/jt url"/>
        </Interface>
        <Interface name="Oozie" type="Oozie" version="3.1">
            <Command name="schedule" url="http://host:port/oozie" command="GET"/>
        </Interface>
         <Interface name="HCat" type="HCat" version="2">
                <Command name="insert_external_partition"  url="host:port" command="ALTER TABLE $hcat_tablename ADD PARTITION (%partitions% ) LOCATION '%location%'"/>
                <Command name="set_partition_properties"  url="host:port" command="ALTER TABLE $hcat_tablename PARTITION (%partitions% ) set fileformat inputformat '%inputformat%' outputformat '%outputformat%' inputdriver '%inputdriver%' outputdriver  '%outputdriver%'"/>
                <Command name="drop_partition"  url="host:port" command="ALTER TABLE $hcat_tablename DROP PARTITION (%partitions%"/>
            </Interface>
        </Interfaces>
    </Sink>
</Datastore>