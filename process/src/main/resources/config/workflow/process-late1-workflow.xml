<workflow-app xmlns='uri:oozie:workflow:0.2' name='ivory-process-parent-workflow'>
	<start to='detectlate' />
	<action name='detectlate'>
		<java>
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>
			<main-class>org.apache.ivory.latedata.LateDataHandler</main-class>
			<arg>detect</arg>
			<arg>${logDir}/latedata-${nominalTime}</arg>
			<arg>${ivoryInPaths}</arg>
			<capture-output />
		</java>
		<ok to="mydecision" />
		<error to="fail" />
	</action>

    <decision name="mydecision">
        <switch>
            <case to="end">
              ${wf:actionData('detectlate')['changedPaths'] == 'INVALID'}
            </case>
            <case to="end">
              ${wf:actionData('detectlate')['changedPaths'] == ''}
            </case>
            <default to="user-workflow"/>
        </switch>
    </decision>

    <action name='user-workflow'>
        <sub-workflow>
         <app-path>#USER_WF_PATH#</app-path>
         <propagate-configuration/>
        </sub-workflow>
		<ok to="ivory-succeeded-messaging" />
		<error to="ivory-failed-messaging" />
	</action>
	<action name='ivory-succeeded-messaging'>
		<java>
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>
			<main-class>org.apache.ivory.messaging.MessageProducer</main-class>
			<arg>${entityName}</arg>
			<arg>${feedNames}</arg>
			<arg>${feedInstancePaths}</arg>
			<arg>${wf:id()}</arg>
			<arg>${wf:run()}</arg>
			<arg>${nominalTime}</arg>
			<arg>${timeStamp}</arg>
			<arg>${brokerUrl}</arg>
			<arg>${brokerImplClass}</arg>
			<arg>${entityType}</arg>
			<arg>${operation}</arg>
			<arg>${logDir}/instacePaths-${nominalTime}.csv</arg>
			<arg>IVORY.PROCESS.TOPIC</arg>
			<arg>SUCCEEDED</arg>
		</java>
		<ok to="user-jms-messaging" />
		<error to="user-jms-messaging" />
	</action>
	<action name='ivory-failed-messaging'>
		<java>
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>
			<main-class>org.apache.ivory.messaging.MessageProducer</main-class>
			<arg>${entityName}</arg>
			<arg>${feedNames}</arg>
			<arg>${feedInstancePaths}</arg>
			<arg>${wf:id()}</arg>
			<arg>${wf:run()}</arg>
			<arg>${nominalTime}</arg>
			<arg>${timeStamp}</arg>
			<arg>${brokerUrl}</arg>
			<arg>${brokerImplClass}</arg>
			<arg>${entityType}</arg>
			<arg>${operation}</arg>
			<arg>${logDir}/instacePaths-${nominalTime}.csv</arg>
			<arg>IVORY.PROCESS.TOPIC</arg>
			<arg>FAILED</arg>
		</java>
		<ok to="fail" />
		<error to="fail" />
	</action>
	<action name='user-jms-messaging'>
		<java>
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>
			<main-class>org.apache.ivory.messaging.MessageProducer</main-class>
			<arg>${entityName}</arg>
			<arg>${feedNames}</arg>
			<arg>${feedInstancePaths}</arg>
			<arg>${wf:id()}</arg>
			<arg>${wf:run()}</arg>
			<arg>${nominalTime}</arg>
			<arg>${timeStamp}</arg>
			<arg>${brokerUrl}</arg>
			<arg>${brokerImplClass}</arg>
			<arg>${entityType}</arg>
			<arg>${operation}</arg>
			<arg>${logDir}/instacePaths-${nominalTime}.csv</arg>
			<arg>${entityName}</arg>
			<arg>SUCCEEDED</arg>
		</java>
		<ok to="end" />
		<error to="end" />
	</action>	

	<kill name="fail">
		<message>Workflow failed, error
			message[${wf:errorMessage(wf:lastErrorNode())}]
		</message>
	</kill>
	<end name='end' />
</workflow-app>
