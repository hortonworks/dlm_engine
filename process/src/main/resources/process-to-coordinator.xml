<mappings xmlns="http://dozer.sourceforge.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dozer.sourceforge.net

http://dozer.sourceforge.net/schema/beanmapping.xsd">

	<configuration>
		<date-format>YYYY/MM/DD HH:mm</date-format>
		<wildcard>false</wildcard>
		<trim-strings>false</trim-strings>
	</configuration>
	<mapping>
		<class-a>org.apache.ivory.entity.v0.process.Process</class-a>
		<class-b>org.apache.ivory.oozie.coordinator.COORDINATORAPP</class-b>
		<field>
			<a>name</a>
			<b>name</b>
		</field>
		<field>
			<a>concurrency</a>
			<b>controls.concurrency</b>
		</field>
		<field>
			<a>execution</a>
			<b>controls.execution</b>
		</field>
		<field>
			<a>validity.start</a>
			<b>start</b>
		</field>
		<field>
			<a>validity.end</a>
			<b>end</b>
		</field>
		<field>
			<a>validity.timezone</a>
			<b>timezone</b>
		</field>
		<field>
			<a>workflow.path</a>
			<b>action.workflow.appPath</b>
		</field>
		<field>
			<a is-accessible="true">properties.property</a>
			<b is-accessible="true">action.workflow.configuration.property</b>
		</field>
		<field>
			<a>workflow.path</a>
			<b>action.workflow.appPath</b>
		</field>

		<field>
			<a is-accessible="true">inputs.input</a>
			<b is-accessible="true">inputEvents.dataIn</b>
		</field>
		<field>
			<a is-accessible="true">outputs.output</a>
			<b is-accessible="true">outputEvents.dataOut</b>
		</field>
	</mapping>
	<mapping wildcard="true">
		<class-a>org.apache.ivory.entity.v0.process.Property</class-a>
		<class-b>org.apache.ivory.oozie.coordinator.CONFIGURATION$Property
		</class-b>
	</mapping>
	<mapping wildcard="true">
		<class-a>org.apache.ivory.entity.v0.process.Input</class-a>
		<class-b>org.apache.ivory.oozie.coordinator.DATAIN</class-b>
		<field>
			<a>feed</a>
			<b>dataset</b>
		</field>
	</mapping>
	<mapping wildcard="true">
		<class-a>org.apache.ivory.entity.v0.process.Output</class-a>
		<class-b>org.apache.ivory.oozie.coordinator.DATAOUT</class-b>
		<field>
			<a>feed</a>
			<b>dataset</b>
		</field>

	</mapping>

</mappings>
