<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<process name="aggregator-coord">
    <cluster name="prod-red" />
	
	<concurrency>2</concurrency>
	<execution>LIFO</execution>
    <frequency>minutes</frequency>
    <periodicity>5</periodicity>
	
	<validity timezone="UTC" end="2010-01-01T03:00Z" start="2010-01-01T01:00Z" />
	<inputs>
		<input end-instance="currentMonth(0,0,40)" start-instance="currentMonth(0,0,20)"
			feed="raw-logs" name="inputData" partition=""/>
	</inputs>
	<outputs>
		<output instance="currentMonth(0,0,0)" feed="aggregated-logs"
			name="outputData" />
	</outputs>
	<properties>
		<property name="queueName" value="default"/>
	</properties>
	<workflow path="${nameNode}/examples/apps/aggregator" />
	<retry policy="backoff" delay="10" delayUnit="min" attempts="3" />

    <late-process policy="exp-backoff" delay="1" delayUnit="hour">
        <late-input feed="impression" workflow-path="hdfs://impression/late/workflow" />
        <late-input feed="clicks" workflow-path="hdfs://clicks/late/workflow" />
    </late-process>
</process>