<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<process name="##name##">
    <cluster name="##cluster##" />
	
	<concurrency>1</concurrency>
	<execution>FIFO</execution>
    <frequency>days</frequency>
    <periodicity>1</periodicity>
	
	<validity timezone="UTC" end="2012-04-21T00:00Z" start="2012-04-20T00:00Z" />
	<inputs>
		<input end-instance="today(0,0)" start-instance="today(0,0)"
			feed="##f1##" name="input"/>
	</inputs>
	<outputs>
		<output instance="now(0,0)" feed="##f2##"
			name="output" />
	</outputs>
	<properties>
	</properties>
	<workflow engine="oozie" path="/ivory/test/workflow" />
	<retry policy="backoff" delay="10" delayUnit="minutes" attempts="3" />

    <late-process policy="exp-backoff" delay="1" delayUnit="hours">
        <late-input feed="input" workflow-path="/ivory/test/workflow" />
    </late-process>
</process>